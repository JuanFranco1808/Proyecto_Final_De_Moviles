<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtSaleIdUser"
        android:layout_width="150sp"
        android:layout_height="30sp"
        android:layout_marginTop="28dp"
        android:text="Id User"
        app:layout_constraintEnd_toStartOf="@+id/btnSaleDetails"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtSaleIdClient"
        android:layout_width="150sp"
        android:layout_height="30sp"
        android:layout_marginTop="12dp"
        android:text="Id Client"
        app:layout_constraintEnd_toStartOf="@+id/btnSaleDetails"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtSaleIdUser" />

    <TextView
        android:id="@+id/txtSaleTotal"
        android:layout_width="150sp"
        android:layout_height="30sp"
        android:layout_marginTop="12dp"
        android:text="Total"
        app:layout_constraintEnd_toStartOf="@+id/btnSaleDetails"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtSaleIdClient" />

    <Button
        android:id="@+id/btnSaleDetails"
        android:layout_width="130sp"
        android:layout_height="50sp"
        android:layout_marginTop="60dp"
        android:backgroundTint="#2196F3"
        android:text="@string/btnSaleDetail"
        android:textSize="20sp"
        app:cornerRadius="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/txtSaleIdClient"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>