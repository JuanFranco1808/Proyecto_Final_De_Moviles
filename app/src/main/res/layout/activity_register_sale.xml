<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFEFD5"
    tools:context=".views.RegisterSale">

    <EditText
        android:id="@+id/txtProductQuantitySale"
        android:layout_width="121dp"
        android:layout_height="41dp"
        android:layout_marginStart="256dp"
        android:layout_marginTop="108dp"
        android:ems="10"
        android:fontFamily="@font/roboto_slab"
        android:hint="@string/productQuantity"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAddProductSale"
        android:layout_width="127dp"
        android:layout_height="53dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/roboto_slab"
        android:text="@string/btnAdd"
        android:textSize="20sp"
        app:cornerRadius="10sp"
        app:layout_constraintEnd_toEndOf="@+id/txtProductQuantitySale"
        app:layout_constraintTop_toBottomOf="@+id/txtProductQuantitySale" />

    <TextView
        android:id="@+id/txtResumenSale"
        android:layout_width="345dp"
        android:layout_height="171dp"
        android:layout_marginTop="256dp"
        android:fontFamily="@font/roboto_slab"
        android:scrollbars="vertical"
        android:text=""
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btnRegisterSale"
        android:layout_width="140sp"
        android:layout_height="50sp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#4CAF50"
        android:fontFamily="@font/roboto_slab"
        android:text="@string/btnRegister"
        android:textSize="20sp"
        app:cornerRadius="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtResumenSale" />

    <Button
        android:id="@+id/btnListSale"
        android:layout_width="120sp"
        android:layout_height="50sp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#E91E63"
        android:fontFamily="@font/roboto_slab"
        android:text="@string/btnList"
        android:textSize="20sp"
        app:cornerRadius="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRegisterSale" />

    <Button
        android:id="@+id/btnBackSale"
        android:layout_width="120sp"
        android:layout_height="50sp"
        android:backgroundTint="#3F51B5"
        android:fontFamily="@font/roboto_slab"
        android:text="@string/btnBack"
        android:textSize="20sp"
        app:cornerRadius="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnListSale"
        app:layout_constraintVertical_bias="0.328" />

    <Spinner
        android:id="@+id/spinnerType"
        android:layout_width="200dp"
        android:layout_height="42dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="176dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextViewProduct"
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:fontFamily="@font/roboto_slab"
        android:hint="Producto"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/spinnerType"
        app:layout_constraintTop_toTopOf="parent" />

    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextViewClient"
        android:layout_width="341dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/roboto_slab"
        android:hint="Cliente"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text=""
        app:layout_constraintEnd_toEndOf="@+id/txtProductQuantitySale"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/spinnerType"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>